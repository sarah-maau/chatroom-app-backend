{
  "name": "chatroom-app-backend",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Sarah Maury",
  "license": "UNLICENSED",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "compile": "tsc --build",
    "format": "prettier --config .prettierrc.json --write src/**/*.ts",
    "lint": "eslint --max-warnings 30 --ext .ts src/**",
    "start:local": "NODE_ENV=local ts-node src/main/start.ts",
    "start:dev": "ts-node src/main/start.ts",
    "start:prod": "node dist/main/start.js",
    "test": "jest --no-cache --forceExit --coverage --testResultsProcessor=jest-sonar-reporter",
    "start": "npm run clean && npm run compile && npm run start:local && npm run start:prod"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/config": "^0.0.41",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.21",
    "@types/pino": "^6.3.8",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "lint-staged": "^12.3.5",
    "npm-check-updates": "^12.5.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.13.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@socket.io/mongo-adapter": "^0.1.0",
    "bcrypt": "^5.0.1",
    "config": "^3.3.7",
    "dayjs": "^1.10.8",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.14.0",
    "fluent-json-schema": "^3.1.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.9",
    "mongoose-paginate-v2": "^1.6.3",
    "pino": "^7.8.1",
    "pino-pretty": "^7.5.3",
    "socket.io": "^4.4.1",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=16.14 <17",
    "npm": ">=8 <9"
  },
  "lint-staged": {
    "*.(js|ts)": "eslint --fix",
    "*.ts": "prettier --config .prettierrc.json --write src/**/*.ts",
    "package.json": [
      "prettier-package-json --write package.json .eslintrc.json .ncurc.json .prettierrc.json",
      "git add"
    ]
  }
}
